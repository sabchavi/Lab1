<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/pageIdentifierTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page_identifier"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/studentDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student_data"
        android:layout_below="@id/pageIdentifierTextView"/>

    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close"
        android:layout_below="@id/studentDataTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
